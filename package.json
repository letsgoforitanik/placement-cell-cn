{
	"name": "placement-cell-cn",
	"version": "1.0.0",
	"description": "Placement cell application",
	"main": "dist/app.js",
	"scripts": {
		"build": "gulp build",
		"prod": "node dist/app.js",
		"dev": "run-p watch:ts:server watch:sass watch:ts:client",
		"watch:sass": "sass --watch src/assets/sass:dist/public/css",
		"watch:ts:server": "nodemon --ignore src/assets/ts/* src/app.ts",
		"watch:ts:client": "tsc --watch --project \"src/assets/ts/tsconfig.json\""
	},
	"author": "Anik Banerjee",
	"license": "ISC",
	"dependencies": {
		"bcrypt": "^5.1.1",
		"body-parser": "^1.20.2",
		"connect-flash": "^0.1.1",
		"dotenv": "^16.3.1",
		"ejs": "^3.1.9",
		"express": "^4.18.2",
		"express-ejs-layouts": "^2.5.1",
		"express-session": "^1.17.3",
		"moment": "^2.29.4",
		"mongoose": "^7.5.0",
		"passport": "^0.6.0",
		"passport-local": "^1.0.0",
		"zod": "^3.22.2"
	},
	"devDependencies": {
		"@types/bcrypt": "^5.0.0",
		"@types/connect-flash": "^0.0.37",
		"@types/express": "^4.17.17",
		"@types/express-ejs-layouts": "^2.5.1",
		"@types/express-session": "^1.17.7",
		"@types/passport": "^1.0.12",
		"@types/passport-local": "^1.0.35",
		"del": "^6.0.0",
		"gulp": "^4.0.2",
		"gulp-clean-css": "^4.3.0",
		"gulp-run": "^1.7.1",
		"gulp-uglify": "^3.0.2",
		"nodemon": "^3.0.1",
		"npm-run-all": "^4.1.5",
		"sass": "^1.66.1",
		"ts-node": "^10.9.1",
		"tsc-alias": "^1.8.7",
		"tsconfig-paths": "^4.2.0",
		"typescript": "^5.2.2"
	}
}
