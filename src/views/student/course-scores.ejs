<%
    viewBag.pageTitle = 'Students | Course Scores';
    const getScore = (rawScore) => rawScore === null ? 'N/A' : rawScore;
%>

<%- contentFor('body') %>
<div class="list-container">

    <h1 class="display-6">
        <strong>Course Scores</strong>
    </h1>

    <table class="table table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Full name</th>
                <th scope="col">Email address</th>
                <th scope="col">DSA Final Score</th>
                <th scope="col">Web Development Final Score</th>
                <th scope="col">React Final Score</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            <% for (let i=0; i < students.length; i++) { %>
                <tr>
                    <% const { _id, name, email, college, courseScores } = students[i]; %>
                    <th scope="row"><%= i + 1 %></th>
                    <td><%= name %></td>
                    <td><%= email %></td>
                    <td><%= getScore(courseScores.dsa) %></td>
                    <td><%= getScore(courseScores.webd) %></td>
                    <td><%= getScore(courseScores.react) %></td>
                    <td>
                        <a href="/students/course-scores/<%= _id.toString() %>/edit">Edit</a>
                    </td>
                </tr> 
            <% } %>
        </tbody>
    </table>


</div>